<window>
	<animation effect="fade" time="400">WindowOpen</animation>
	<animation effect="fade" time="400">WindowClose</animation>
	<controls>

		<control type="karvisualisation" id="1">
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
		</control>

		<control type="image" id="2">
			<description>fullscreen image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<visibility>false</visibility>
		</control>

		<control type="group">
			<posx>8</posx>
			<posy>10</posy>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>500</width>
				<height>90</height>
				<texture>backgrounds/notification_background.png</texture>
			</control>
			<control type="label" id="401">
				<description>Current Song Name</description>
				<posx>15</posx>
				<posy>14</posy>
				<font>font21</font>
				<textcolor>green</textcolor>
				<haspath>yes</haspath>
				<width>470</width>
				<height>20</height>
				<aligny>center</aligny>
				<align>left</align>
				<label>[COLOR grey]$LOCALIZE[13350][/COLOR] $INFO[MusicPlayer.Title]</label>
			</control>
			<control type="label" id="402">
				<description>Next Song Name</description>
				<posx>15</posx>
				<posy>50</posy>
				<font>font21</font>
				<textcolor>green</textcolor>
				<haspath>yes</haspath>
				<width>470</width>
				<height>20</height>
				<aligny>center</aligny>
				<align>left</align>
				<label>[COLOR grey]$LOCALIZE[209]:[/COLOR] $INFO[MusicPlayer.offset(1).Title]</label>
			</control>
		</control>
	</controls>
</window>
